import java.util.Arrays;
import java.util.IntSummaryStatistics;

public class Demo {
 
  public static void main(String[] args) {
         Scanner scanner = new Scanner(System.in); 
       int i = scanner.nextInt();
//       i = 1;
      for(int o = 0; o < i; o++){
           int i1 = scanner.nextInt();
           int sum = 0;
           int sum_length =0;
           for(int t = 0; t < i1;t++){
                   int i2 = scanner.nextInt();
                   sum = sum+ i2;
                   sum_length++;
           }
        //    System.out.println(sum + " " + sum_length );
           if(sum < 0){
                    System.out.println(1);
           } else if (sum_length == sum){
                    System.out.println(0);
           } else {
                   int lin = 0;
                   while(true){
                         if(sum_length == sum){
                                System.out.println(lin);
                                break;
                         }
                         if(sum_length > sum){
                                      System.out.println(1);
                                      break;
                         }
                         if(sum > sum_length){
                                 sum_length++;
                         }
                         lin++;  
                   }
           }
      }
  }
}
