          Scanner scanner = new Scanner(System.in); 
         int sum = scanner.nextInt();
         int i = 0;
        while(i < sum){
                int sum1 = scanner.nextInt();
                int sum2 = scanner.nextInt();
                if(sum1 >= sum2){
                         if(sum1 - sum2 == 0){
                                 System.out.println("Yes"); 
