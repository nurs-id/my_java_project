public class Demo {
  public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
    int i = scanner.nextInt();
    int sum = 0;
    int min = -1;
    int c = 0;
    String num = "%";
    for(int a = 0; a < i;a++ ){
            int t  = scanner.nextInt();
            if(t%2 == 0){
                    sum = sum +t;
            } else {
                   if(min == -1|| min > t){
                           min = t;
                   } 
                   c++;
                    sum = sum +t;
            }
    }
    if(min == -1){
            System.out.print(0);
    } else{
            if(c%2==0){
                    System.out.print(sum-min);
            } else {
                    System.out.print(sum);
            }
    }
    
  
     
  }
